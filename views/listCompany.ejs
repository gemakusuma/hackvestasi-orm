<!DOCTYPE html>
<html lang="en">
<%- include('header'); %>

<body style="background-color: #f6f6f8;">
<%- include('navbar'); %>


<div class="container">
    <div id="container-home">
        <form class="form-inline" method="GET" action="/companies">
            <div class="form-group mx-sm-3 mb-2">
                <input type="text" name="search" class="form-control" id="search" placeholder="Search">
            </div>
            <input type="submit" value="Search" class="btn btn-primary mb-2">
        </form>
        <div class="row" id="listVendor">
            <% companies.forEach(item => { %>

                <div class="col-lg-3" style="margin-top:5px;">
                    <div class="card card-custom">
                        <div class="card-body" style="border-radius: 5px;">
                            <div class="card-title">
                                <img src="<%= item.image %>" class="img-fluid" style="width:100%; height: 130px;"
                                     alt="">
                            </div>
                            <h6 class="card-subtitle mb-2 text-muted"><%= item.name %></h6>
                            <p class="card-text">Kategori Resiko : <%= item.riskLevelWord %></p>
                            <p class="card-text">Return Investasi :
                                <br>
                                <b class="growth-text-<%= item.growthFlag %>">
                                    <%= item.growth %>%
                                </b>
                            </p>

                            <a href="/companies/<%= item.id %>">
                                <button class="btn btn-secondary col-lg-12">Detail Reksadana</button>
                            </a>
                        </div>
                    </div>
                </div>
            <% }) %>

        </div>
    </div>
</div>

<script src="assets/js/index.js"></script>
<script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js"
        integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj"
        crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-Fy6S3B9q64WdZWQUiU+q4/2Lc9npb8tCaSX9FK7E8HnRr0Jz8D6OP9dO5Vg3Q9ct"
        crossorigin="anonymous"></script>
</body>
</html>