<!DOCTYPE html>
<html lang="en">
<%- include('header'); %>

<body style="background-color: #f6f6f8;">
<%- include('navbarAdmin'); %>

<div class="container" style="margin-top: 30px;">
    <div class="row">
        <div class="col-lg-6 offset-lg-3">
            <% errors.forEach(item => { %>
                <li style="color:red;"><%= item %></li>
            <% }) %>
            <form method="POST" action="/admin/<%= company.id %>/edit">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input type="text" value="<%= company.name %>" name="name" class="form-control" id="name">
                </div>
                <div class="form-group">
                    <label for="description">Description</label>
                    <input type="text" value="<%= company.description %>" name="description" class="form-control" id="description">
                </div>
                <div class="form-group">
                    <label for="image">Image</label>
                    <input type="text" value="<%= company.image %>" name="image" class="form-control" id="image">
                </div>
                <div class="form-group">
                    <label for="risk_level">Risk Level</label>
                    <select name="risk_level" id="" class="form-control">
                        <option value="1" <% if(company.risk_level === 1){ %> selected <% } %> >Rendah</option>
                        <option value="2" <% if(company.risk_level === 2){ %> selected <% } %>>Sedang</option>
                        <option value="3" <% if(company.risk_level === 3){ %> selected <% } %>>Tinggi</option>
                    </select>
                </div>


                <div class="form-group">
                    <label for="growth">Growth</label>
                    <input type="number" value="<%= company.growth %>" name="growth" class="form-control" id="growth">
                </div>

                <div class="form-group">
                    <label for="obligasi_pemerintah">Obligasi Pemerintah</label>
                    <input type="number" value="<%= company.CompanyDetail?.obligasi_pemerintah %>" name="obligasi_pemerintah" class="form-control" id="obligasi_pemerintah">
                </div>

                <div class="form-group">
                    <label for="obligasi_korporasi">Obligasi Korporasi</label>
                    <input type="number" value="<%= company.CompanyDetail?.obligasi_korporasi %>" name="obligasi_korporasi" class="form-control" id="obligasi_korporasi">
                </div>
                <div class="form-group">
                    <label for="pasar_uang">Pasar Uang</label>
                    <input type="number" value="<%= company.CompanyDetail?.pasar_uang %>" name="pasar_uang" class="form-control" id="pasar_uang">
                </div>

                <input type="submit" class="btn btn-primary" value="Update">
            </form>
        </div>
    </div>
</div>

<script src="assets/js/index.js"></script>
<script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js"
        integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj"
        crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-Fy6S3B9q64WdZWQUiU+q4/2Lc9npb8tCaSX9FK7E8HnRr0Jz8D6OP9dO5Vg3Q9ct"
        crossorigin="anonymous"></script>
</body>
</html>