<!DOCTYPE html>
<html lang="en">
<%- include('header'); %>

<body style="background-color: #f6f6f8;">
<%- include('navbar'); %>


<div class="container">
    <div id="container-history-pembelian" style="margin-bottom: 20px;">
        <div class="col-lg-12">
            <div class="text-history">
                <h3>
                    History Transaction
                </h3>
            </div>
            <%
            transactions.forEach(item => {
                let flag = item.flagData()
            %>
                <div id="historyPembelian">
                    <div class="riwayat">
                        <div class="side-bar-history row">
                            <div class="col-lg-7 col-md-12 col-sm-12">
                                <img src="<%= item.Company.image %>" style="margin-left: 15px;">
                                <div class="side-bar-history-text">
                                    <p style="font-size: 15px;"><b><%= item.Company.name %></b></p>
                                    <p style="color:<%= flag.styleGrowth %>">Return Investasi : <%= item.Company.growth %>%</p>
                                    <p>Jumlah Investasi : <%= item.totalRupiahFormat %></p>
                                    <p>Tanggal Pembelian : <%= item.formatDate() %></p>
                                </div>
                            </div>
                            <div class="col-lg-5 col-md-12 col-sm-12">
                                <p class="side-right">Risk Level : <%= item.Company.riskLevelWord %></p>
                                <p class="side-right-bottom" style="font-size: 13px;">Status : Pembelian Berhasil</p>
                            </div>
                        </div>
                    </div>
                </div>
            <% }) %>

        </div>

    </div>
</div>

<script src="assets/js/index.js"></script>
<script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js"
        integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj"
        crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-Fy6S3B9q64WdZWQUiU+q4/2Lc9npb8tCaSX9FK7E8HnRr0Jz8D6OP9dO5Vg3Q9ct"
        crossorigin="anonymous"></script>
</body>
</html>